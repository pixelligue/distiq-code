# distiq-code Configuration

# Server
PROXY_HOST=127.0.0.1
PROXY_PORT=11434
DEBUG=false

# Logging
LOG_LEVEL=INFO

# Smart Routing
SMART_ROUTING=true
ML_ROUTING_ENABLED=true

# Semantic Caching
CACHE_ENABLED=true
CACHE_TTL_HOURS=168
CACHE_SIMILARITY_THRESHOLD=0.85
CACHE_MAX_SIZE=10000
CACHE_EMBEDDING_MODEL=google/embeddinggemma-300m

# Anthropic Prompt Caching
PROMPT_CACHING_ENABLED=true

# Compression (requires pip install distiq-code[compression])
COMPRESSION_ENABLED=true
COMPRESSION_TARGET_TOKENS=500
COMPRESSION_MODEL=microsoft/llmlingua-2-bert-base-multilingual-cased-meetingbank

# Anthropic API (default, usually no need to change)
ANTHROPIC_API_BASE=https://api.anthropic.com
